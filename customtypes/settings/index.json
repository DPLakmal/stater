{
  "id": "settings",
  "label": "Settings",
  "format": "custom",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "siteTitle": {
        "type": "StructuredText",
        "config": {
          "label": "Site Title",
          "placeholder": "Title of the site",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "gtm_code": {
        "type": "Text",
        "config": {
          "label": "GTM Code",
          "placeholder": ""
        }
      },
      "copyright_text": {
        "type": "Text",
        "config": {
          "label": "Copyright Text",
          "placeholder": ""
        }
      },
      "footer_description": {
        "type": "Text",
        "config": {
          "label": "Footer Description",
          "placeholder": ""
        }
      },
      "contact_us_title": {
        "type": "StructuredText",
        "config": {
          "label": "Contact Us Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "preformatted,heading2,heading3,heading4,heading5,heading6,strong"
        }
      },
      "contact_us": {
        "type": "Group",
        "config": {
          "label": "Contact Us",
          "repeat": true,
          "fields": {
            "label": {
              "type": "StructuredText",
              "config": {
                "label": "Label",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,preformatted,strong,hyperlink,image,embed,list-item,o-list-item"
              }
            },
            "icon_name": {
              "type": "Text",
              "config": {
                "label": "Icon Name",
                "placeholder": ""
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "Social Profiles": {
      "social_profiles": {
        "type": "Group",
        "config": {
          "label": "Social Profiles",
          "repeat": true,
          "fields": {
            "profile": {
              "type": "Select",
              "config": {
                "label": "Profile",
                "placeholder": "",
                "options": [
                  "X (Twitter)",
                  "Facebook",
                  "LinkedIn",
                  "Instagram",
                  "TikTok",
                  "YouTube"
                ]
              }
            },
            "url": {
              "type": "Text",
              "config": {
                "label": "Profile URL",
                "placeholder": ""
              }
            }
          }
        }
      }
    },
    "Default Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      }
    }
  }
}
